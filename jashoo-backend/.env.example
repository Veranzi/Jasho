MONGODB_TEST_URI=mongodb://localhost:27017/jashoo_test
DB_NAME=jashoo
DB_USER=
DB_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-minimum-32-characters
