# Server Configuration
PORT=3000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/jashoo
MONGODB_TEST_URI=mongodb://localhost:27017/jashoo_test

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# Session Configuration
SESSION_SECRET=your-session-secret-key-change-this-in-production

# Security Configuration
BALANCE_ENCRYPTION_KEY=your-balance-encryption-key-change-this
CONTRACT_SALT=your-contract-salt-change-this

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=uploads/

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:8080

# Blockchain Configuration
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_PROJECT_ID
POLYGON_RPC_URL=https://polygon-rpc.com
BSC_RPC_URL=https://bsc-dataseed.binance.org
JASHOO_CONTRACT_ADDRESS=0x1234567890123456789012345678901234567890

# AI Configuration
OPENAI_API_KEY=your-openai-api-key
TENSORFLOW_MODEL_PATH=./models/credit-scoring-model.json

# External APIs
ABSA_API_URL=https://api.absa.africa
ABSA_API_KEY=your-absa-api-key
M_PESA_API_URL=https://sandbox.safaricom.co.ke
M_PESA_API_KEY=your-mpesa-api-key
M_PESA_CONSUMER_SECRET=your-mpesa-consumer-secret

# Redis Configuration (for caching and rate limiting)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d

# Security Monitoring
SECURITY_MONITORING_ENABLED=true
THREAT_DETECTION_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=90

# Document Scanning
DOCUMENT_SCAN_ENABLED=true
MALWARE_DETECTION_ENABLED=true
QR_CODE_VALIDATION_ENABLED=true

# Voice Processing
VOICE_PROCESSING_ENABLED=true
SPEECH_TO_TEXT_ENABLED=true
TEXT_TO_SPEECH_ENABLED=true

# Credit Scoring
CREDIT_SCORE_RECALCULATION_INTERVAL=24h
AI_MODEL_TRAINING_ENABLED=true
PREDICTIVE_ANALYTICS_ENABLED=true