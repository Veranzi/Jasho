{
  "name": "secure-finance-platform",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/*",
    "packages/*",
    "blockchain"
  ],
  "scripts": {
    "dev": "npm-run-all -p dev:*",
    "dev:api": "npm --workspace apps/api run dev",
    "dev:web": "npm --workspace apps/web run dev",
    "build": "npm-run-all -s build:shared -p build:api build:web",
    "build:shared": "npm --workspace packages/shared run build",
    "build:api": "npm --workspace apps/api run build",
    "build:web": "npm --workspace apps/web run build",
    "typecheck": "npm-run-all -p typecheck:*",
    "typecheck:shared": "npm --workspace packages/shared run typecheck",
    "typecheck:api": "npm --workspace apps/api run typecheck",
    "typecheck:web": "npm --workspace apps/web run typecheck",
    "deploy:chain": "npm --workspace blockchain run deploy"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "typescript": "^5.6.2",
    "prettier": "^3.3.3"
  }
}
